for row in range(6):
    for col in range(7):
        if (row==0 and (col!=3 and col!=0 and col!=6)) or ((col==0 or col==3) and (row!=0 and row!=2 and row!=3 and row!=4 and row!=5)) or (col==6 and (row!=0 and row!=3 and row!=4 and row!=5) ):
            print("*",end="")
        elif(row-col==2 or row+col==8):
            print("*",end="")
        
        else:
            print(end=" ")
    print()
